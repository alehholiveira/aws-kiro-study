{
  "name": "world-cup-backend",
  "version": "1.0.0",
  "description": "RESTful API service for FIFA World Cup historical data and simulations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:sync": "node scripts/sync-db.js",
    "db:sync:force": "node scripts/sync-db.js --force",
    "db:seed": "node scripts/seed-db.js",
    "db:seed:clear": "node scripts/seed-db.js --clear",
    "db:reset": "npm run db:sync:force && npm run db:seed",
    "test": "mocha tests/**/*.test.js --exit",
    "test:unit": "mocha tests/unit/**/*.test.js --exit",
    "test:integration": "mocha tests/integration/**/*.test.js --exit",
    "test:e2e": "mocha tests/e2e/**/*.test.js --exit"
  },
  "keywords": ["world-cup", "api", "rest", "fifa"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.0",
    "mysql2": "^3.6.5",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "supertest": "^6.3.3",
    "fast-check": "^3.15.0",
    "nodemon": "^3.0.2"
  }
}
